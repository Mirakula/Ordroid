<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFCC"
    android:orientation="vertical"
    android:weightSum="1.0" >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zaglavlje" >

        <TextView
            android:id="@+id/textView1"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UČITAVANJE PODATAKA"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUcitajProgrameSaServera"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_button"
        android:text="Osvježi prodajne programe" />

    <ListView
        android:id="@+id/lvProgramiSaServera"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:divider="#f00"
        android:dividerHeight="1dp" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/btnUkini"
            style="@style/ButtonText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/red_button"
            android:text="Ukini" />

        <Button
            android:id="@+id/btnOdaberi"
            style="@style/ButtonText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/green_button"
            android:text="Odaberi" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvIzabraniProgrami"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:divider="#f00"
        android:dividerHeight="1dp" >
    </ListView>

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <RadioButton
            android:id="@+id/rBsve"
            android:layout_width="0dip"
            style="@style/RaddioButton1"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Sve"
            android:textColor="#000cad" />

        <RadioButton
            android:id="@+id/rBasortiman"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Asortiman"
            style="@style/RaddioButton1"
            android:textColor="#000cad" />

        <RadioButton
            android:id="@+id/rBkupci"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:text="Kupci"
            style="@style/RaddioButton1"
            android:textColor="#000cad" />

        <RadioButton
            android:id="@+id/rBfinansije"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            style="@style/RaddioButton1"
            android:text="Finansije"
            android:textColor="#000cad" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_button" >

        <CheckBox
            android:id="@+id/cBOsvjezi"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Osvježi podatke sa servera" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/btnNazad78"
            style="@style/ButtonText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/red_button"
            android:text="Nazad" />

        <Button
            android:id="@+id/btnNastavi"
            style="@style/ButtonText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/green_button"
            android:text="Nastavi" />
    </LinearLayout>

</LinearLayout>