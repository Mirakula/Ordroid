<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCFFCC"
    android:orientation="horizontal"
    android:weightSum="1.0"
    android:paddingLeft="7dp"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout 
        android:layout_width="0dip"
        android:layout_weight="0.47"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/tvNazivFirme22"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
            android:textColor="#000cad"
            android:textSize="11.2dp"
            android:layout_margin="1dp" />
        <TextView
        android:id="@+id/tvNazivMisa22"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""
        android:textColor="#006442"
            android:textSize="8.7dp"
            android:layout_margin="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTipNarudzbe22"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.095"
        android:text=""
        android:textColor="#000CAD"
        android:textSize="12dp"
        android:layout_marginRight="3dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvVrijeme22"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:text=""
        android:textColor="#000CAD"
        android:textSize="12dp"
        android:layout_marginRight="3dp"
        android:gravity="right" />

    <TextView
        android:id="@+id/tvIznosNarudzbe22"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.19"
        android:gravity="right"
        android:text=""
        android:textColor="#f00"
        android:textSize="12dp"
        android:layout_marginRight="1dp" />

    <CheckBox
        android:id="@+id/cbIzaberiNarudzbu"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:background="#CCFFCC"
        android:text="" />

</LinearLayout>