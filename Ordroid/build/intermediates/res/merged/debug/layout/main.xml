<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFCC"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zaglavlje" >

        <TextView
            android:id="@+id/textView1"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ORDERCOM"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:gravity="bottom"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/txtKorisnickoIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Korisničko ime"
            android:inputType="textPersonName"
            android:textColor="#000" />

        <EditText
            android:id="@+id/txtLozinka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Šifra"
            android:inputType="textPassword"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center_vertical"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/btnIzlaz"
            style="@style/ButtonText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/red_button"
            android:text="Izlaz" />

        <Button
            android:id="@+id/btnPrijava"
            style="@style/ButtonText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/green_button"
            android:text="Prijava" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_button" >

        <TextView
            android:id="@+id/textView3"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="COMP-2000 d.o.o."
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

